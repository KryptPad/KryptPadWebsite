<script id="account-options-template" type="text/html">
    <div class="content-section">

        <message-widget params="message: message"></message-widget>

        <div class="alert alert-warning" style="display: none" data-bind="visible: $data.showEmailConfirmationWarning">

            <strong>Notice:</strong>
            Your email address has not yet been confirmed. Click
