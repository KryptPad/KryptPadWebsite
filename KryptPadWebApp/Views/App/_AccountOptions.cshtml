            <p>
                <a href="#my-account/change-password" class="btn btn-primary">Change Password</a>
            </p>
        </div>

        @*<div>
            <span class="lead">Delete your account</span>
            <p>
                <a href="#my-account/delete-account" class="btn btn-danger">Delete Account</a>
            </p>
