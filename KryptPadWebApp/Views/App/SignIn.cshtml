
@{
    ViewBag.Title = "Sign In";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@*Header*@
<div class="login-header text-center">
    <span class="lead ">SIGN IN</span>
</div>

@*Main body*@
<div id="signin" class="login-body">
    <!--Login-->
    <div data-bind="visible: !isBusy()">

        <form id="login-form" method="post" action='@Url.RouteUrl("App")'>

            <message-widget params="message: message"></message-widget>

            <label class="sr-only" for="username">Email</label>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="fa fa-user fa-fw"></i>
                </span>
                <input type="text" id="username" class="form-control" data-bind="textInput: username"
                       placeholder="Email: example@domain.com" />
            </div>

            <label class="sr-only" for="password">Password</label>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="fa fa-key fa-fw"></i>
                </span>
                <input type="password" id="password" class="form-control" data-bind="textInput: password"
                       placeholder="password" />
            </div>

            <p>
                <button data-bind="click: login, enable: signInEnabled" class="btn btn-primary btn-block">Sign In</button>
            </p>

            <div>
                <span>
                    <a href="@Url.RouteUrl("ForgotPassword")">Forgot password</a>
                    |
                    <a href="@Url.RouteUrl("SignUp")">Sign up for an account</a>
                </span>
            </div>
        </form>

    </div>

    <!--Spinner-->
    <div class="wait-spinner" data-bind="visible: isBusy">
        <i class="fa fa-spinner fa-pulse fa-3x fa-fw margin-bottom"></i>
        <span class="lead">Just a moment...</span>
    </div>
</div>



@section scripts{
    @Scripts.Render("~/bundles/signin")
}