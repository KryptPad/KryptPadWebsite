
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@*App section*@
<div id="forgot-password" class="login-section">

    <p class="lead text-center">FORGOT PASSWORD</p>

    <message-widget params="message: message"></message-widget>

    <!--Confirmation message appears when the linkSent flag is set-->
    <div data-bind="visible: linkSent" style="display: none">
        <a href="@Url.RouteUrl("SignIn")" class="btn btn-default">Go back to Sign In page</a>
    </div>

    <!--Forgot password form-->
    <div data-bind="visible: !isBusy() && !linkSent()">
        
        <small><label for="forgot-email">Enter your email address below to recover your account</label></small>
        <input type="text" id="forgot-email" class="form-control" data-bind="value: email"
               placeholder="example@domain.com" />

        <br />
        <p>
            <button data-bind="click: sendLink" class="btn btn-primary">Send Reset Link</button>
            <a href="@Url.RouteUrl("SignIn")" class="btn btn-default">Cancel</a>
        </p>


    </div>


    <!--Spinner-->
    <div class="wait-spinner" data-bind="visible: isBusy">
        <i class="fa fa-spinner fa-pulse fa-3x fa-fw margin-bottom"></i>
        <span class="lead">Just a moment...</span>
    </div>

</div>

@section scripts{
    <script src="~/Scripts/app/forgot-password.js"></script>
}