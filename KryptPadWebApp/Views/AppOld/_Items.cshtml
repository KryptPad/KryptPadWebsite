<script id="items-template" type="text/html">

    <div class="content-section">

        <message-widget params="message: message"></message-widget>

        <!--Categories view-->
        <div data-bind="foreach: categories">

            @*Category*@
            <div>
                @*Category header*@
                <p data-bind="text: Name"></p>

                @*List of items*@
                <div class="row">

                </div>

            </div>
        </div>
        
        <!-- ko if: categories().length === 0 -->
        <span>You don't have any categories created.</span>
        <!-- /ko -->

        @{ Html.RenderPartial("_Spinner");}

    </div>
</script>
