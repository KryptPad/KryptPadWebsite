@using KryptPadWebApp.Models
@using KryptPadWebApp.Resources
@model HomeIndexViewModel
@{
    ViewBag.Title = "Home Page";
}

@section pageHeader{

    @*Account section*@
    <div class="container text-center" style="min-height: 100%">
        <div class="hero hero-heading">
            
            <h1>@Strings.AppName</h1>
            <p class="lead">@Strings.TagLine</p>
            @*<img src="~/Content/Images/safe-white.svg" width="256" alt="Krypt Pad" />*@

            @*Account management*@
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="row ">
                    @*Sign in form*@
                    <div id="sign-in" class="col-lg-offset-2 col-md-offset-1 col-lg-4 col-md-5 col-sm-6 border-right">
                        @Html.Partial("_Signin", Model.SigninModel)
                    </div>

                    @*Sign up form*@
                    <div id="sign-up" class="col-lg-4 col-md-5 col-sm-6">
                        @Html.Partial("_Signup", Model.CreateAccountRequest)
                    </div>

                </div>
            }
            else
            {
                <p>
                    <a href="@Url.RouteUrl("SelectProfile")" class="btn btn-primary btn-lg">Go to my account</a>
                </p>
            }
        </div>
    </div>

    @*Social section*@
    <div class="social-bar">
        <div class="container text-center">

            <a href="https://www.facebook.com/KryptPad/"><img src="~/Content/Images/social_facebook.png" /></a>
            <a href="https://twitter.com/KryptPad"><img src="~/Content/Images/social_twitter.png" /></a>

        </div>
    </div>
}

