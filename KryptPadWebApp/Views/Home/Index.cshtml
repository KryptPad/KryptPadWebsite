@model KryptPadWebApp.Models.HomeIndexViewModel
@{
    ViewBag.Title = "Home Page";
}

@section pageHeader{
    <div class="hero hero-main hero-light-blue">
        <div class="container text-center">

            <h1>Krypt Pad</h1>
            <p class="lead">Secure credential manager</p>
            <img src="~/Content/Images/safe-white.svg" width="256" alt="Krypt Pad" />

        </div>

    </div>
}

@*Available downloads*@
<div class="container text-center">
    <p class="h1">
        Download
    </p>
    <hr />
    <p>
        <a href="https://www.microsoft.com/en-us/store/p/krypt-pad/9nblggh5xd4f" target="_blank">
            <i class="fa fa-windows fa-5x"></i>
