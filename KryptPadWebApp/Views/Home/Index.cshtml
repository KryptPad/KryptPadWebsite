@model KryptPadWebApp.Models.HomeIndexViewModel
@{
    ViewBag.Title = "Home Page";
}

@section pageHeader{

    @*Account section*@
    <div class="container text-center">

        <h1>Krypt Pad</h1>
        <p class="lead">Secure credential manager</p>
        @*<img src="~/Content/Images/safe-white.svg" width="256" alt="Krypt Pad" />*@

        <div class="row">
            @*Sign in form*@
            <div id="sign-in" class="col-lg-offset-2 col-md-offset-1 col-lg-4 col-md-5 col-sm-6 border-right">

                <h4>Sign in</h4>

                <form id="login-form" method="post" action='@Url.RouteUrl("App")'>

                    <message-widget params="message: message"></message-widget>

                    <label class="sr-only" for="username">Email</label>
                    <span class="text-danger" data-bind="validationMessage: username"></span>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user fa-fw"></i>
                        </span>
                        <input type="text" id="username" class="form-control" data-bind="textInput: username"
                               placeholder="Email: example@domain.com" />
                    </div>
                    <br />

                    <label class="sr-only" for="password">Password</label>
                    <span class="text-danger" data-bind="validationMessage: password"></span>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-key fa-fw"></i>
                        </span>
                        <input type="password" id="password" class="form-control" data-bind="textInput: password"
                               placeholder="password" />
                    </div>

                    <br />

                    <p>
                        By signing in, you agree to the <a href="@Url.RouteUrl("Terms")" target="_blank">license terms</a>.
                        Also, please read the <a href="@Url.RouteUrl("Policy")" target="_blank">privacy policy</a>.
                    </p>

                    <p>
                        <button data-bind="click: login" class="btn btn-primary btn-block">Sign In</button>
                    </p>

                    <div>
                        <span>
                            <a href="@Url.RouteUrl("ForgotPassword")">Forgot password</a>
                            |
                            <a href="@Url.RouteUrl("SignUp")">Sign up</a>
                        </span>
                    </div>
                </form>


            </div>

            @*Sign up form*@
            <div id="sign-up" class="col-lg-4 col-md-5 col-sm-6">

                <h4>Create an account</h4>

                <label class="sr-only" for="username">Email</label>
                <span class="text-danger" data-bind="validationMessage: username"></span>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-user fa-fw"></i>
                    </span>
                    <input type="text" id="username" class="form-control" data-bind="textInput: username"
                           placeholder="Email: example@domain.com" />
                </div>
                <br />

                <label class="sr-only" for="password">Password</label>
                <span class="text-danger" data-bind="validationMessage: password"></span>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-key fa-fw"></i>
                    </span>
                    <input type="password" id="password" class="form-control" data-bind="textInput: password"
                           placeholder="password" />
                </div>
            </div>


        </div>

    </div>

    @*Social section*@
    <div class="social-bar">
        <div class="container text-center">

            <a href="https://www.facebook.com/KryptPad/"><img src="~/Content/Images/social_facebook.png" /></a>
            <a href="https://twitter.com/KryptPad"><img src="~/Content/Images/social_twitter.png" /></a>

        </div>
    </div>
}

